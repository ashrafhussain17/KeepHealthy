<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/cardview_default_elevation"
        android:paddingLeft="@dimen/cardview_default_elevation"
        android:paddingRight="@dimen/cardview_default_elevation"
        android:paddingTop="@dimen/cardview_default_elevation"
        android:orientation="vertical"
        tools:context=".ProfileActivity">



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="#ff0000"
            android:textSize="15dp"
            android:id="@+id/textViewUserEmail"
            android:layout_gravity="center_horizontal" />



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <LinearLayout
                android:background="@drawable/gradient_background"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
            <ImageView android:layout_width="150dp"
                       android:id="@+id/image_view"
                       android:layout_height="120dp"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="10dp"
                       android:src="@mipmap/imagsource"/>
        </LinearLayout>

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="120dp"
                android:src="@drawable/circle_shape"/>

        <ImageButton android:layout_width="40dp"
                     android:id="@+id/capture_image_btn"
                   android:layout_height="40dp"
                   android:layout_marginLeft="55dp"
                   android:layout_marginTop="125dp"
                   android:src="@drawable/ic_add_a_photo_black_24dp"/>

    </RelativeLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColorHighlight="@color/endblue"
              android:textColor="@color/light_green"
              android:layout_gravity="center"
              android:textSize="20dp"
              android:text="Nickname"/>

    <EditText
            android:id="@+id/nickname"
            android:hint="Enter Your Nickname"
            android:paddingLeft="30dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:textColorHighlight="@color/endblue"
              android:textColor="@color/light_green"
              android:textSize="20dp"
              android:text="User Information"
              android:textAlignment="center"/>


    <GridLayout
            android:orientation="vertical"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp">

        <android.support.v7.widget.CardView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

           <TextView
                   android:layout_marginTop="6dp"
                   android:layout_marginLeft="40dp"
                   android:text="Gender"
                   android:textSize="20dp"
                   android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
            <Spinner
                    android:scrollbarSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="35dp"
                    android:entries="@array/gender_type"
                    android:layout_width="wrap_content"
                     android:layout_height="wrap_content">

            </Spinner>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center_horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/height"
                        android:text="Height"
                        android:textSize="20dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/heightvalue"
                        android:hint=" In CMS"
                        android:layout_width="wrap_content"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"/>




            </LinearLayout>


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center_horizontal"
                          android:layout_margin="16dp"
                          android:layout_height="wrap_content">

                <Button android:id="@+id/birthdate"
                        android:layout_width="wrap_content"
                        android:text="Birth Date"
                        android:layout_height="wrap_content"/>




            </LinearLayout>


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center_horizontal"
                          android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/weight"
                        android:text="Weight"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/weightvalue"
                        android:hint=" In Kgs"
                        android:layout_width="wrap_content"
                        android:textSize="15dp"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>




    </GridLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">



        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textSize="15dp"
                android:id="@+id/buttonDone"
                android:layout_gravity="center_horizontal" />



        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="15dp"
                android:id="@+id/buttonLogout"
                android:layout_gravity="center_horizontal" />

    </LinearLayout>




</LinearLayout>