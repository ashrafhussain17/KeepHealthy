<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/cardview_default_elevation"
        android:paddingLeft="@dimen/cardview_default_elevation"
        android:paddingRight="@dimen/cardview_default_elevation"
        android:paddingTop="@dimen/cardview_default_elevation"
        tools:context=".LoginPage">


    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/button_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_marginBottom="228dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="353dp"
            android:background="@drawable/signinbackground"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.777">


        <TextView
                android:text="SIGN UP"
                android:textColor="@color/light_green"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="63dp" android:id="@+id/textView2" android:textSize="24sp"
        />
        <TextView

                android:text="ENTER EMAIL"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/downback2"
                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/emailid"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPersonName"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:id="@+id/emailtext"/>

        <TextView
                android:text="ENTER PASSWORD"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/downback2"
                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/passwordid"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPersonName"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:id="@+id/passwordtext"/>

        <Button android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="SIGN UP"
                android:onClick="click"
                android:textColor="@color/breakfast"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/signinBtn"
                android:background="@drawable/addfood_back"/>



    </LinearLayout>
</android.support.constraint.ConstraintLayout>